state_air = 1

function new_player(x,y)

	local player = {}
	
	player.x = x
	player.y = y
	player.runspeed = 120
	player.direction = 1
	player.fallspeed = 0
	player.state = 1
	player.hitbox = new_rect(x,y,8,8)
	
	player.cur_sprite = 1
	player.anim_timer = 0
	
	player.update = function(this)
	
		-- movement
		if btn(1) then
			this.move(this,1)
			this.animate_run(this)
		elseif btn(0) then
			this.move(this,-1)
			this.animate_run(this)
		end
		
		-- stay in screen
		if this.x > 128-this.hitbox.w then
			this.x = 128-this.hitbox.w
		end
		if this.x < 0 then
			this.x = 0
		end
		
		-- update gravity if in air
		this.fallspeed += gravity * dt
		this.y += this.fallspeed
		
		-- match hitbox with position
		this.hitbox.x = this.x
		this.hitbox.y = this.y
		
		-- get overlapping tiles
		local gpos1 = gridpos(x,y)
		local gpos2 = gridpos(this.hitbox.right(this.hitbox),this.hitbox.bottom(this.hitbox))
		
		-- check collision with tiles
		for x=gpos1.x,gpos2.x+1 do
			for y=gpos1.y,gpos2.y+1 do
			
				if solid(x,y) and aabb_tile(this.hitbox,x,y) then
					this.fallspeed = 0
					this.y = (y-1)*8
				end
			end
		end
	end
	
	player.animate_run = function(this)
		
		this.anim_timer += dt
		
		if this.anim_timer > 0.05 then
			this.anim_timer = this.anim_timer - 0.05
			
			if this.cur_sprite == 2 then
				this.cur_sprite = 1
			else
				this.cur_sprite = 2
			end
		end
	end
	
	player.move = function(this,direction)
	
		this.direction = direction
		
		local speed = player.runspeed * direction * dt
		this.x += speed
	end
	
	player.draw = function(this)
		
		local left = false
		if this.direction == -1 then
			left = true
		end
		
		spr(this.cur_sprite,this.x,this.y,1,1,left)
	end
	
	return player
end
