function new_rect(x,y,w,h)

	local r = {}
	
	r.x = x
	r.y = y
	r.w = w
	r.h = h
	
	r.right = function(this)
		return this.x + this.w
	end
	
	r.bottom = function(this)
		return this.y + this.h
	end
	
	return r
end

function aabb(r1, r2)

	if r1.right(r1) > r2.x and r1.x < r2.right(r2) then
		if r1.bottom(r1) > r2.y and r1.y < r2.bottom(r2) then
			return true
		end
	end

	return false
end

function aabb_tile(hitbox, x, y)

	local left = x * 8
	local top = y * 8
	
	if hitbox.right(hitbox) > left and hitbox.x < left+8 then
		if hitbox.bottom(hitbox) > top and hitbox.y < top+8 then
			return true
		end
	end
	
	return false
end
